<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv2"
        app:layout_constraintBottom_toTopOf="@id/iv4">
    </ImageView>

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toEndOf="@id/iv1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv3"
        app:layout_constraintBottom_toTopOf="@id/iv5">
    </ImageView>

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv6">
    </ImageView>

    <ImageView
        android:id="@+id/iv4"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv1"
        app:layout_constraintEnd_toStartOf="@id/iv5"
        app:layout_constraintBottom_toTopOf="@id/iv7">
    </ImageView>


    <ImageView
        android:id="@+id/iv5"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toEndOf="@id/iv4"
        app:layout_constraintTop_toBottomOf="@id/iv2"
        app:layout_constraintEnd_toStartOf="@id/iv6"
        app:layout_constraintBottom_toTopOf="@id/iv8">
    </ImageView>

    <ImageView
        android:id="@+id/iv6"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toEndOf="@id/iv5"
        app:layout_constraintTop_toBottomOf="@id/iv3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv9">
    </ImageView>

    <ImageView
        android:id="@+id/iv7"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv4"
        app:layout_constraintEnd_toStartOf="@id/iv8"
        app:layout_constraintBottom_toTopOf="@id/iv10">
    </ImageView>

    <ImageView
        android:id="@+id/iv8"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toEndOf="@id/iv7"
        app:layout_constraintTop_toBottomOf="@id/iv5"
        app:layout_constraintEnd_toStartOf="@id/iv9"
        app:layout_constraintBottom_toTopOf="@id/iv11">
    </ImageView>

    <ImageView
        android:id="@+id/iv9"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toEndOf="@id/iv8"
        app:layout_constraintTop_toBottomOf="@id/iv6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv12">
    </ImageView>

    <ImageView
        android:id="@+id/iv10"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv7"
        app:layout_constraintEnd_toStartOf="@id/iv11"
        app:layout_constraintBottom_toTopOf="@id/tvLife">
    </ImageView>

    <ImageView
        android:id="@+id/iv11"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintTop_toBottomOf="@id/iv8"
        app:layout_constraintStart_toEndOf="@id/iv10"
        app:layout_constraintEnd_toStartOf="@id/iv12"
        app:layout_constraintBottom_toTopOf="@id/tvLife">
    </ImageView>

    <ImageView
        android:id="@+id/iv12"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toEndOf="@id/iv11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv9"
        app:layout_constraintBottom_toTopOf="@id/tvLife">
    </ImageView>

    <TextView
        android:id="@+id/tvLife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv11"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Vidas : ">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>